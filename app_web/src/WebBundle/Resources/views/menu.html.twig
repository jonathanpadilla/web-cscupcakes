<script type="text/javascript">
    $(function(){

      $('#menuu ul li a').hover(
        function(){
          $(this).parent().parent().parent().parent().parent().find('img').attr('src', $(this).attr('href'));
          $(this).css('font-weight','900');
        },
        function(){
          $(this).css('font-weight','normal');
        }
      );

      $(document).on('click', '#menuu ul li a', function(event){
        event.preventDefault();
        var $lis = $('#menuu ul li');
        $.each($lis, function(){
          $(this).removeClass("selected");
        });
        $(this).parent().addClass("selected");
        console.log('asd');
      });

      var $textarea = $('form textarea');
